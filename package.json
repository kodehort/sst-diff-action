{
  "name": "sst-diff-action",
  "version": "0.1.0",
  "private": true,
  "description": "Github action that will compile an sst diff and write it to the action summary.",
  "main": "lib/main.js",
  "engines": {
    "node": "^16.0.0"
  },
  "scripts": {
    "build": "ncc build src/index.ts -o dist --transpile-only --minify",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "act": "npm run package && act -j test -W .github/workflows/test.yml",
    "clean:dist": "git filter-branch --index-filter 'git rm -rf --cached --ignore-unmatch dist' HEAD",
    "bump": "node ./scripts/bump.cjs",
    "release": "node ./scripts/release.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodehort/sst-diff-action.git"
  },
  "keywords": [
    "actions",
    "diff",
    "sst"
  ],
  "author": "Kodehort Limited",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@aws-cdk/cloud-assembly-schema": "^2.85.0",
    "@aws-cdk/cloudformation-diff": "^2.85.0",
    "@aws-sdk/client-cloudformation": "^3.358.0",
    "aws-cdk-lib": "^2.85.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@kodehort/eslint-config": "^2.1.1",
    "@total-typescript/ts-reset": "^0.4.2",
    "@tsconfig/node16": "^1.0.4",
    "@types/node": "^20.3.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.43.0",
    "eslint-plugin-github": "^4.8.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  }
}
