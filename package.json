{
  "name": "sst-diff-action",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Github action that will compile an sst diff and write it to the action summary.",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "tsup",
    "test": "vitest run",
    "act": "npm run package && act -j test -W .github/workflows/test.yml",
    "clean:dist": "git filter-branch --index-filter 'git rm -rf --cached --ignore-unmatch dist' HEAD",
    "all": "npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodehort/sst-diff-action.git"
  },
  "keywords": [
    "actions",
    "diff",
    "sst"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@aws-cdk/cloud-assembly-schema": "^2.82.0",
    "@aws-cdk/cloudformation-diff": "^2.82.0",
    "@aws-sdk/client-cloudformation": "^3.345.0",
    "aws-cdk-lib": "^2.82.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/parser": "^5.59.2",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-vitest": "^0.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  }
}
